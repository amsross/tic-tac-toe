{
  "tasks": {
    "dev": "deno run --allow-env src/main.ts",
    "dev:watch": "deno run --watch --allow-env src/main.ts",
    "test": "deno test",
    "test:watch": "deno task test --watch"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "include": ["src/"]
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  }
}
